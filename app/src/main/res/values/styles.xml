    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- ProgressBar -->
    <style name="Vp_MaterialHorizontalProgressBar" parent="Widget.MaterialProgressBar.ProgressBar.Horizontal">
        <item name="android:indeterminate">true</item>
        <item name="mpb_indeterminateTint">@color/vp_primary_color</item>
        <item name="mpb_showProgressBackground">false</item>
        <item name="mpb_progressStyle">horizontal</item>
        <item name="mpb_useIntrinsicPadding">false</item>
        <item name="android:minHeight">3dp</item>
        <item name="android:maxHeight">3dp</item>
    </style>
    <!-- ProgressBar -->

    <style name="VPTextInputLayout" parent="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"/>

    <style name="Widget.AppTheme.AppBar" parent="@style/Widget.Design.AppBarLayout" />

    <style name="VPToolbarStyle">
        <item name="android:background">@color/colorPrimary</item>
    </style>

